<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".groupDetailsMember"
    android:orientation="vertical"
    android:background="#5D39C9"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/back_arrow">
        </ImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="48dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="140dp"
            android:layout_gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_foreground" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plansButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="288dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:text="PLANS"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/oval_button"
            android:textColor="#5D39C9"
            />

        <TextView
            android:id="@+id/boardRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board Room"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="90dp" />

        <TextView
            android:id="@+id/createdByTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by Abdullah Umar"
            android:textColor="#DBDBDB"
            android:textSize="16dp"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="95dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.25"
        android:background="@drawable/rounded_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_box"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="The board room of all and everything that has to do with the board and its members." />

            <TextView
                android:id="@+id/upcomingPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Plan"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/upcoming_plan"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.75">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner Meet"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/like_img"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/like"
                        android:layout_marginLeft="140dp"
                        />
                    <TextView
                        android:id="@+id/like_increase"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        />
                    <ImageView
                        android:id="@+id/dislike_img"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/dislike"
                        android:layout_marginLeft="0dp"
                        />
                    <TextView
                        android:id="@+id/like_decrease"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:00 PM"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/view_button"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:src="@drawable/view_button"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17/10/2023"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/membersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/peopleGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
