<!-- res/layout/item_contact.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Circular ImageView for the profile image -->
    <ImageView
        android:id="@+id/contactProfileImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/circular_background"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"/>

    <!-- TextView for the contact name -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contactProfileImage"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"/>

    <!-- TextView for the contact email -->
    <TextView
        android:id="@+id/contactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"/>

    <!-- Separator line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/contactProfileImage"
        android:background="@android:color/black"/>
</RelativeLayout>
