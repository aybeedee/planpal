<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Schedule"
    android:background="#5D39C9">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="88dp"
        android:background="@drawable/img_6"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"


        ></ImageView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>
    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/ellipse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Free Schedule"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Date"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/calendar_foreground"
            />

        <EditText
            android:id="@+id/startTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Start Time"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/start_time_foreground"
            />

        <EditText
            android:id="@+id/endTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="End Time"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/time_foreground"
            />
        <ImageView
            android:id="@+id/updateSchedule"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/update_schedule"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>


    </LinearLayout>







</RelativeLayout>