<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/upcoming_plan"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.75">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner Meet"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/like"
                android:layout_marginLeft="140dp"
                />
            <TextView
                android:id="@+id/like_increase"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:text="3"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                />
            <ImageView
                android:id="@+id/dislike_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/dislike"
                android:layout_marginLeft="0dp"
                />
            <TextView
                android:id="@+id/like_decrease"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:text="3"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/upcoming_button"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="@drawable/oval_button"
                android:text="UPCOMING"
                android:textColor="#5D39C9"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 PM"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/10/2023"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>