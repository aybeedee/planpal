<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D39C9">


    <TextView
        android:id="@+id/ellipse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Name of Contact"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        ></TextView>


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/circular_background"
        android:src="@drawable/img_6"
        ></ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        >

    </ImageButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plansbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Plans"
        android:layout_marginLeft="320dp"
        android:textStyle="bold"
        android:textColor="#5D39C9"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button1"
        ></androidx.appcompat.widget.AppCompatButton>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ellipse1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <!-- Add image button -->
            <ImageButton
                android:id="@+id/addImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/outline_camera_alt_24"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Add Image" />

            <ImageButton
                android:id="@+id/addfileButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_attach_file_24"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Add Image" />



            <!-- Text message input field -->
            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Write a reply..."
                android:textSize="16sp" />

            <!-- Send button -->
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_send_24"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Send Message" />
        </LinearLayout>


    </LinearLayout>







</RelativeLayout>