<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#5D39C9"
    tools:context=".Signup">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="88dp"
        android:background="@drawable/img_6"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"


        ></ImageView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>
    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-80dp"
        android:layout_below="@+id/ellipse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Get Started"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="By creating a new account"
            android:textSize="16sp"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/circularBackground"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/purple_circle"
            android:clickable="true"
            android:contentDescription="Camera Button" />
        <ImageView
            android:id="@+id/cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-57dp"
            android:src="@drawable/baseline_camera_alt_24"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Camera Button" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:hint="Full Name"
            android:padding="20dp"
            android:textColor="#000000"
            />

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="16sp"
            />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:hint="Email Address"
            android:padding="20dp"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:textColor="#000000"/>


        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:id="@+id/password_edit_text"
                    android:textColor="#000000"/>

                <ImageButton
                    android:id="@+id/toggle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/baseline_remove_red_eye_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Toggle password visibility"
                    android:onClick="togglePasswordVisibility"
                    android:layout_marginRight="5dp"/>
            </FrameLayout>
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Signupbutton"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/account"
        android:layout_marginTop="695dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <Button
        android:layout_toRightOf="@+id/account"
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_marginTop="683dp"
        android:layout_marginLeft="-20dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#5D39C9"
        android:background="@android:color/transparent"
        ></Button>



</RelativeLayout>