<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5D39C9">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="88dp"
        android:background="@drawable/img_6"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"


        ></ImageView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>
    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img"
        ></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/ellipse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome Back"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Please type the verification code sent to username@gmail.com"
            android:textSize="16sp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- First EditText -->
            <EditText
                android:id="@+id/box1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:background="@drawable/edittext_background"


                android:textAlignment="center"
                android:textSize="24sp" />

            <!-- Second EditText -->
            <EditText
                android:id="@+id/box2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"

                android:background="@drawable/edittext_background"
                android:textAlignment="center"
                android:textSize="24sp" />

            <!-- Third EditText -->
            <EditText
                android:id="@+id/box3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"

                android:background="@drawable/edittext_background"
                android:textAlignment="center"
                android:textSize="24sp" />

            <!-- Fourth EditText -->
            <EditText
                android:id="@+id/box4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"

                android:background="@drawable/edittext_background"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Verifybutton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Verify"
            android:textColor="#FFFFFF"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/round_button"
            ></androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>



    <TextView
        android:id="@+id/account"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Didn't receive any code?"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    <Button
        android:layout_toRightOf="@+id/account"
        android:id="@+id/resendcodebutton"
        android:layout_width="wrap_content"
        android:layout_marginTop="409dp"
        android:layout_marginLeft="-20dp"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textSize="17sp"
        android:textColor="#5D39C9"
        android:background="@android:color/transparent"
        ></Button>

    <TextView
        android:layout_marginTop="450dp"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Request new code in 00:30 Seconds"
        android:textColor="#9A9A9A"
        android:textSize="13sp"
        />



</RelativeLayout>